<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/mobile_navigation"
  app:startDestination="@+id/homeFragment">

  <fragment
    android:id="@+id/homeFragment"
    android:name="com.sinan.myfood.presentation.HomeScreenFragment"
    android:label="fragment_home"
    tools:layout="@layout/fragment_home" >
    <action
      android:id="@+id/action_homeFragment_to_searchFragment"
      app:destination="@id/searchFragment" />
  </fragment>
  <fragment
    android:id="@+id/favoriteMeals"
    android:name="com.sinan.myfood.presentation.FavoriteFragment"
    android:label="fragment_favorite_meals"
    tools:layout="@layout/fragment_favorite_meals" />
  <fragment
    android:id="@+id/categoryFragment"
    android:name="com.sinan.myfood.presentation.CategoryFragment"
    android:label="fragment_category"
    tools:layout="@layout/fragment_category">
  </fragment>
  <fragment
    android:id="@+id/searchFragment"
    android:label="fragment_search"
    tools:layout="@layout/fragment_search" />
</navigation>
